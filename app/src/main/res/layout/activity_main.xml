<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#333"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race Start Practice Program"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:textSize="26sp"
        android:fontFamily="@font/orbitron_variable"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <com.example.practiceracestart.CircleView
            android:id="@+id/light1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp"/>
        <com.example.practiceracestart.CircleView
            android:id="@+id/light2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp"/>
        <com.example.practiceracestart.CircleView
            android:id="@+id/light3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp"/>
        <com.example.practiceracestart.CircleView
            android:id="@+id/light4"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp"/>
        <com.example.practiceracestart.CircleView
            android:id="@+id/light5"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:paddingTop="25sp"
        android:paddingBottom="25sp"
        android:text="Start Program"
        android:textColor="@android:color/white"
        android:backgroundTint="#222"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/orbitron_variable"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>